/**app.wxss**/
page {
  background-color: #f8f9fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', Arial, sans-serif;
  color: #333;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
}

.card {
  width: 100%;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  color: #333;
  text-align: center;
}

.subtitle {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 30rpx;
  text-align: center;
}

.btn-primary {
  background: linear-gradient(135deg, #6ec8ff 0%, #4a90e2 100%);
  color: #fff;
  border-radius: 40rpx;
  padding: 24rpx 0;
  width: 90%;
  text-align: center;
  margin: 40rpx auto;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 6rpx 16rpx rgba(74, 144, 226, 0.3);
  transition: all 0.3s ease;
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.3);
} 