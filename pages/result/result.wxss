.header {
  width: 100%;
  text-align: center;
  margin-bottom: 30rpx;
  padding-top: 20rpx;
}

.chart-container {
  width: 100%;
  height: 500rpx;
  margin-bottom: 40rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

ec-canvas {
  width: 100%;
  height: 100%;
}

.summary {
  margin-bottom: 30rpx;
}

.summary-title, .key-points-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 25rpx;
  color: #4a90e2;
  border-bottom: 1px solid #eee;
  padding-bottom: 15rpx;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.label {
  color: #666;
  font-size: 28rpx;
}

.value {
  font-weight: 500;
  color: #333;
  font-size: 28rpx;
}

.key-point-item {
  margin-bottom: 20rpx;
  color: #333;
  font-size: 28rpx;
  line-height: 1.6;
  padding-left: 10rpx;
}

.mode-switch {
  display: flex;
  width: 100%;
  margin: 40rpx 0;
}

.mode-btn {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  background: #f0f3f8;
  margin: 0 10rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #666;
}

.mode-btn.active {
  background: linear-gradient(135deg, #6ec8ff 0%, #4a90e2 100%);
  color: #fff;
  box-shadow: 0 4rpx 10rpx rgba(74, 144, 226, 0.3);
}

.tips {
  width: 100%;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  line-height: 1.8;
  background: #f0f8ff;
  padding: 20rpx;
  border-radius: 16rpx;
} 