.header {
  width: 100%;
  text-align: center;
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.picker {
  height: 80rpx;
  line-height: 80rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
}

input {
  height: 80rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
}

.year-buttons {
  display: flex;
  justify-content: space-between;
}

.year-btn {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  margin: 0 10rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.year-btn.active {
  background: #1aad19;
  color: #fff;
}

.tips {
  background: #f9f9f9;
}

.tip-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.tip-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
} 