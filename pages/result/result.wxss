.header {
  width: 100%;
  text-align: center;
  margin-bottom: 20rpx;
}

.chart-container {
  width: 100%;
  height: 500rpx;
  margin-bottom: 30rpx;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

.summary {
  margin-bottom: 20rpx;
}

.summary-title, .key-points-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.label {
  color: #666;
}

.value {
  font-weight: bold;
}

.key-point-item {
  margin-bottom: 15rpx;
  color: #333;
  font-size: 28rpx;
}

.mode-switch {
  display: flex;
  width: 100%;
  margin: 30rpx 0;
}

.mode-btn {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
  background: #f5f5f5;
  margin: 0 10rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.mode-btn.active {
  background: #1aad19;
  color: #fff;
}

.tips {
  width: 100%;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  line-height: 1.6;
} 